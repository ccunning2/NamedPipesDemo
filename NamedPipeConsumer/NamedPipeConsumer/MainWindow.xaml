<Window x:Class="NamedPipeConsumer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NamedPipeConsumer"
        mc:Ignorable="d"
        Title="NamedPipeReceiver" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" FontSize="40" Foreground="BlueViolet" HorizontalAlignment="Center"/>
    </Grid>
</Window>
